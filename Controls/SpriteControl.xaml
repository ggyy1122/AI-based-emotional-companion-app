<UserControl x:Class="GameApp.Controls.SpriteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             Width="200" Height="200">
    <Grid>
        <Image x:Name="SpriteImage"
               Stretch="Fill"
               MouseLeftButtonDown="SpriteImage_MouseLeftButtonDown"
               MouseMove="SpriteImage_MouseMove"
               MouseLeftButtonUp="SpriteImage_MouseLeftButtonUp"/>
        <Canvas x:Name="BubbleCanvas" IsHitTestVisible="False"/>
    </Grid>
</UserControl>
