<Page x:Class="GameApp.Pages.SpiritDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="精灵数据"
      Background="#FFF5F5F5"
      FontFamily="Microsoft YaHei">
    <Page.Resources>
        <DropShadowEffect x:Key="SoftShadow" 
                     BlurRadius="15" 
                     ShadowDepth="3" 
                     Opacity="0.1"
                     Color="#888888"/>
    </Page.Resources>
    <Grid>
        <!-- 渐变背景 -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFE3F2FD" Offset="0"/>
                    <GradientStop Color="#FFBBDEFB" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- 返回按钮 -->
        <Button x:Name="BackButton" 
        Content="← 返回主页面"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="20,20,0,0"
        Padding="10,5"
        FontSize="14"
        FontWeight="SemiBold"
        Foreground="#FF1976D2"
        Background="White"
        Click="BackButton_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FFBBDEFB"/>
            </Button.BorderBrush>
            <Button.BorderThickness>1</Button.BorderThickness>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    CornerRadius="10"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Padding="{TemplateBinding Padding}"
                    Effect="{StaticResource SoftShadow}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource NoBorderButtonStyle}">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFE3F2FD"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- 主内容区 -->
        <ScrollViewer Padding="30" Margin="0,60,0,0">
            <!-- 调整上边距为按钮留出空间 -->
            <StackPanel>
                <!-- 精灵问候 -->
                <Border Background="White" 
                        CornerRadius="15"
                        Padding="20"
                        Margin="0,0,0,30"
                        Effect="{StaticResource SoftShadow}">
                    <StackPanel>
                        <TextBlock Text="亲爱的主人，我是AI小精灵" 
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="#FF424242"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="很高兴能陪伴在您身边~" 
                                   FontSize="16"
                                   Foreground="#FF757575"/>
                    </StackPanel>
                </Border>

                <!-- 数据卡片区 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 对话数据卡片 -->
                    <Border Grid.Column="0" 
                            Background="White"
                            CornerRadius="15"
                            Padding="20"
                            Margin="0,0,15,30"
                            Effect="{StaticResource SoftShadow}">
                        <StackPanel>
                            <TextBlock Text="📊 我们的对话时光" 
                                       FontSize="18"
                                       FontWeight="Medium"
                                       Foreground="#FF424242"
                                       Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="💬" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="我们一起对话了 " 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                                <TextBlock Text="{Binding ConversationCount}" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#FF1976D2"/>
                                <TextBlock Text=" 次" 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="25,5,0,0">
                                <TextBlock Text="最喜欢的话题：" 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                                <TextBlock Text="{Binding FavoriteTopic}" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#FF1976D2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 游戏数据卡片 -->
                    <Border Grid.Column="1" 
                            Background="White"
                            CornerRadius="15"
                            Padding="20"
                            Margin="15,0,0,30"
                            Effect="{StaticResource SoftShadow}">
                        <StackPanel>
                            <TextBlock Text="🎮 游戏成就" 
                                       FontSize="18"
                                       FontWeight="Medium"
                                       Foreground="#FF424242"
                                       Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="🕹️" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="您参加了小游戏 " 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                                <TextBlock Text="{Binding GamePlayCount}" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#FFE91E63"/>
                                <TextBlock Text=" 次" 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="25,5,0,0">
                                <TextBlock Text="最高分 " 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                                <TextBlock Text="{Binding HighScore}" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#FFE91E63"/>
                                <TextBlock Text=" 分，" 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                            </StackPanel>

                            <TextBlock Text="相信您会继续打破记录的！" 
                                       FontSize="16"
                                       Foreground="#FF616161"
                                       Margin="25,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 心情数据卡片 -->
                    <Border Grid.Column="0" Grid.Row="1"
                            Background="White"
                            CornerRadius="15"
                            Padding="20"
                            Margin="0,0,15,0"
                            Effect="{StaticResource SoftShadow}">
                        <StackPanel>
                            <TextBlock Text="📝 心情笔记" 
                                       FontSize="18"
                                       FontWeight="Medium"
                                       Foreground="#FF424242"
                                       Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📚" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="您有 " 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                                <TextBlock Text="{Binding DiaryCount}" 
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#FF7B1FA2"/>
                                <TextBlock Text=" 篇心情笔记，" 
                                           FontSize="16"
                                           Foreground="#FF616161"/>
                            </StackPanel>

                            <TextBlock Text="您的心情我为您守护 ❤️" 
                                       FontSize="16"
                                       Foreground="#FF616161"
                                       Margin="25,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 精灵形象卡片 -->
                    <Border Grid.Column="1" Grid.Row="1"
                            Background="White"
                            CornerRadius="15"
                            Padding="20"
                            Margin="15,0,0,0"
                            Effect="{StaticResource SoftShadow}">
                        <Grid>
                            <Image Source="/Resources/Sprite/sprite4.png" 
                                   Width="120" Height="120"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>